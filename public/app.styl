// out: app.css
@font-face
  font-family 'Roboto Regular'
  src url('fonts/Roboto-Regular.ttf')

sidebar_length = 200px
searchbox_height = 40px

body
  padding 0 0 0 0
  margin 0 0 0 0
  width 100vw
  font-family 'Roboto Regular', Helvetica !important

input
  padding 5px 15px !important
  box-sizing border-box !important

.chat-container
  height 100vh
  background-image url('img/bg_chat.png')
  background-repeat repeat
  background-attachment fixed

.chat-list
  display flex
  flex-direction column
  float left
  width sidebar_length
  height 100vh
  background-color rgba(60,60,60,0.8)
  color rgb(210,210,210)

.chat-fix-wrapper
  display flex
  flex-direction column
  width 100%
  padding 0 0
  margin 0 0
  height 100%

.chat-list-wrapper
  list-style none
  flex-grow 2
  width 100%
  padding 0 0
  margin 30px 0

.chat-list-item-container
  height 40px
  line-height 40px
  text-align center
  margin 0 0
  padding 0 0

.chat-input-wrapper
  border-bottom 2px solid rgba(100,100,100,0.2)

.chat-list-search
  width sidebar_length - searchbox_height
  height 40px
  line-height 30px
  outline none
  border none
  box-shadow none
  background-color rgba(255,255,255,0.1)
  color rgb(220,220,220)

.chat-add-button
  width searchbox_height
  height searchbox_height
  line-height searchbox_height
  text-align center
  font-size 16pt
  font-family 'Consolas', monospace
  float right
  background-color rgba(255,255,255,0.1)
  cursor pointer

.chat-contents-wrapper
  height 100vh
  display flex
  flex-direction column
  overflow hidden
  background-color transparent

.chat-contents
  flex-direction column
  flex-grow: 2
  align-content flex-start
  align-self flex-start
  width 100%

.chat-bubble
  display flex
  margin-top 0.4em
  margin-left 0.6em
  margin-right 0.6em
  border-radius 3px
  width 75%
  color rgb(60,60,60)

.chat-bubble-inner
  width 100%
  padding 0.25em 0.5em

.chat-bubble-inner span
  display block

.chat-other
  float left

.chat-self
  float right

.chat-bubble.chat-other
  background-color rgba(40,40,40,0.1)

.chat-bubble.chat-self
  background-color rgba(80,80,80,0.1)

.chat-user
  width 100%
  font-size 10pt
  color rgb(120,120,120)
  height 20px
  line-height 20px

.chat-input
  align-self flex-end
  height 40px
  width 100%
  border none
  border-top 1px solid rgb(160,160,160)
  box-shadow none
  color rgb(80,80,80)
  background-color rgba(255,255,255,0.4)
  outline none
